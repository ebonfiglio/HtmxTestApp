@using HtmxTestApp.Shared.Entities;
@model IEnumerable<Country>


<table cellpadding="0" cellspacing="0">
    <tr>
        <th>
            Name
        </th>
        <th>
            Flag
        </th>
        <th>
            Manage
        </th>
    </tr>
    @foreach (Country country in Model)
    {
            <tr>
            <td>@country.Name</td>
            <td>@Html.Raw(country.HtmlCode)</td>
            <td><a asp-page="/Countries/Edit" asp-route-id="@country.Id" type="button" class="btn btn-edit btn-75w">Edit</a> | <a asp-page="/Countries/Edit" asp-route-id="@country.Id" type="button" class="btn btn-delete btn-75w">Delete</a></td>
            </tr>
    }
</table> 