@using HtmxTestApp.Shared.Entities;
@model IEnumerable<Game>


<table cellpadding="0" cellspacing="0">
    <tr>
        <th>
           Home Team
        </th>
        <th>
           Away Team
        </th>
        <th>
            Score
        </th>
    </tr>
    @foreach (Game game in Model)
    {
        <tr>
            <td>@game.HomeTeam.Name (@game.HomeTeam.Country?.HtmlCode)</td>
            <td>@game.AwayTeam.Name (@game.AwayTeam.Country?.HtmlCode)</td>
            <td>@(game.HomeTeamScore) - @(game.AwayTeamScore) </td>
            <td><a asp-page="/Games/Edit" asp-route-id="@game.Id" type="button" class="btn btn-edit btn-75w">Edit</a> | <a asp-page="/Games/Edit" asp-route-id="@game.Id" type="button" class="btn btn-delete btn-75w">Delete</a></td>
        </tr>
    }
</table> 